<% if @family.present? %>
  <% if @family.errors.any? %>
    <% @family.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new family
</h1>


<hr>

<form action="/create_family" method="post">

  <div class="form-group">
    <label for="family_name">
      Family name
    </label>

    <input type="text" id="family_name" name="family_name" class="form-control" value="<%= @family.family_name %>">
  </div>

  <div class="form-group">
    <label for="family_description">
      Family description
    </label>

    <textarea id="family_description" name="family_description" class="form-control" rows="3"><%= @family.family_description %></textarea>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create family
  </button>
</form>

<hr>

<a href="/families">
  Go back
</a>
