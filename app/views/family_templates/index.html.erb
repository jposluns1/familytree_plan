<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All families
    </h1>

    <a href="/families/new" class="btn btn-block btn-outline-secondary">
      Add a new family
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "family_templates/families_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Family name
        </th>

        <th>
          Family description
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @families.each do |family| %>
      <tr>
        <td>
          <%= family.id %>
        </td>

        <td>
          <%= family.family_name %>
        </td>

        <td>
          <%= family.family_description %>
        </td>

        <td>
          <% if family.user.present? %>
            <a href="/users/<%= family.user.id %>">
              <%= family.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(family.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(family.updated_at) %> ago
        </td>

        <td>
          <a href="/families/<%= family.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @families, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
