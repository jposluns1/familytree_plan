<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All family member matches
    </h1>

    <a href="/family_member_matches/new" class="btn btn-block btn-outline-secondary">
      Add a new family member match
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "family_member_match_templates/family_member_matches_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Family
        </th>

        <th>
          Member
        </th>

        <th>
          Generation
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @family_member_matches.each do |family_member_match| %>
      <tr>
        <td>
          <%= family_member_match.id %>
        </td>

        <td>
          <% if family_member_match.family.present? %>
            <a href="/families/<%= family_member_match.family.id %>">
              <%= family_member_match.family.family_name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if family_member_match.member.present? %>
            <a href="/members/<%= family_member_match.member.id %>">
              <%= family_member_match.member.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= family_member_match.generation %>
        </td>

        <td>
          <%= time_ago_in_words(family_member_match.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(family_member_match.updated_at) %> ago
        </td>

        <td>
          <a href="/family_member_matches/<%= family_member_match.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @family_member_matches, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
