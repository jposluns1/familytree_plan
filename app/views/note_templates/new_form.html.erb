<h1>
  Add a new note
</h1>


<hr>

<form action="/create_note" method="post">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <textarea id="body" name="body" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="member_id">
      Member
    </label>

    <%= select_tag(:member_id, options_from_collection_for_select(Member.all, :id, :first_name, @note.member_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create note
  </button>
</form>

<hr>

<a href="/notes">
  Go back
</a>
