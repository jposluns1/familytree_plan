<h1>
  Edit note #<%= @note.id %>
</h1>

<hr>

<form action="/update_note/<%= @note.id %>" method="post">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <textarea id="body" name="body" class="form-control" rows="3"><%= @note.body %></textarea>
  </div>

  <div class="form-group">
    <label for="member_id">
      Member
    </label>

    <%= select_tag(:member_id, options_from_collection_for_select(Member.all, :id, :first_name, @note.member_id), :class => "form-control") %>
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Update note
  </button>
</form>

<hr>

<a href="/notes">
  Go back
</a>
