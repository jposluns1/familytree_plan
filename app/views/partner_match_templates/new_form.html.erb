<h1>
  Add a new partner match
</h1>


<hr>

<form action="/create_partner_match" method="post">

  <div class="form-group">
    <label for="member_id_1">
      Member id 1
    </label>

    <%= select_tag(:member_id_1, options_from_collection_for_select(Member.all, :id, :first_name, @partner_match.member_id_1), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="member_id_2">
      Member id 2
    </label>

    <%= select_tag(:member_id_2, options_from_collection_for_select(Member.all, :id, :first_name, @partner_match.member_id_2), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create partner match
  </button>
</form>

<hr>

<a href="/partner_matches">
  Go back
</a>
