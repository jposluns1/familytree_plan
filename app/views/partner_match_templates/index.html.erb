<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All partner matches
    </h1>

    <a href="/partner_matches/new" class="btn btn-block btn-outline-secondary">
      Add a new partner match
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "partner_match_templates/partner_matches_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Member id 1
        </th>

        <th>
          Member id 2
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @partner_matches.each do |partner_match| %>
      <tr>
        <td>
          <%= partner_match.id %>
        </td>

        <td>
          <% if partner_match.member.present? %>
            <a href="/members/<%= partner_match.member.id %>">
              <%= partner_match.member.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if partner_match.member_2.present? %>
            <a href="/members/<%= partner_match.member_2.id %>">
              <%= partner_match.member_2.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(partner_match.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(partner_match.updated_at) %> ago
        </td>

        <td>
          <a href="/partner_matches/<%= partner_match.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @partner_matches, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
