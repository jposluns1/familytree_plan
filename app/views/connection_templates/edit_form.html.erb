<h1>
  Edit connection #<%= @connection.id %>
</h1>

<hr>

<form action="/update_connection/<%= @connection.id %>" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @connection.name %>">
  </div>

  <div class="form-group">
    <label for="image">
      Image
    </label>

    <%= cl_image_tag(@connection.image.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="image" name="image" class="form-control">
  </div>

  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @connection.location %>">
  </div>

  <div class="form-group">
    <label for="birthday">
      Birthday
    </label>

    <input type="text" id="birthday" name="birthday" class="form-control" value="<%= @connection.birthday %>">
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Update connection
  </button>
</form>

<hr>

<a href="/connections">
  Go back
</a>
