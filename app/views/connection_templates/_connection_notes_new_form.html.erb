<!-- Form note start -->
<form action="/create_note_from_connection" method="post">
<!-- Form note end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <textarea id="body" name="body" class="form-control" rows="3"><%= @note.body %></textarea>
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for commenter_id start -->
  <!-- Input for "commenter_id" start -->
  <input type="hidden" name="commenter_id" value="<%= current_user.id %>">
  <!-- Input for "commenter_id" end -->
  <!-- Label and input for commenter_id end -->

  <!-- Label and input for connection_id start -->
  <!-- Input for connection_id start -->
  <input type="hidden" name="connection_id" value="<%= @connection.id %>">
  <!-- Input for connection_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create note
  </button>
</form>
