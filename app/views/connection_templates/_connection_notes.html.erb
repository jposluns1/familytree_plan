<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Notes

    <a data-toggle="collapse" href="#connection_notes_new_form">
      Add note
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @connection.notes.each do |note| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/notes/<%= note.id %>">
          <%= note.body %>
        </a>

        <%if current_user == note.user %>
          <a href="/delete_note_from_connection/<%= note.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="connection_notes_new_form">
        <%= render partial: "connection_templates/connection_notes_new_form" %>
      </div>
    </div>

  </ul>
</div>
